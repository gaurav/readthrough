<% include ../partials/top.ejs %>

<div class="container-fluid" style="padding-top: 50px;">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li class="active"><a href="#">Account details <span class="sr-only">(current)</span></a></li>
            </ul>
            <ul id="tags" class="nav nav-sidebar">
                <li>What?</li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Account details</h1>

            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <td>Variable</td>
                        <td>Value</td>
                    </tr>
                </thead>
                <tbody>
                    <% for (x in user) { %>
                    <tr>
                        <td><%= x %></td>
                        <td><%= user[x] %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

            <h2>Active tasks (<%= tasks.count() || 0 %>)</h2>
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <td>Task</td>
                    </tr>
                </thead>
                <tbody>
                    <% var count = 0; tasks.find().forEach(function(task) { count++; %>
                        <tr>
                            <td><pre><%= task %></pre>
                            </td>
                        </tr>
                    <% }); %>
                    <% if(count == 0) { %>
                        <tr><td>
                            <em>No tasks found.</em>
                        </td></tr>
                    <% } %>
                </tbody>
            </table>    
        </div>
    </div>
</div>

<% include ../partials/bottom.ejs %>
